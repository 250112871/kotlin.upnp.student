<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dime_px2dip_80"
        android:layout_marginLeft="@dimen/dime_px2dip_20"
        android:gravity="center_vertical"
        android:text="设备列表"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dime_px2sp_38" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/dime_px2dip_80"
        android:layout_height="@dimen/dime_px2dip_80"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dime_px2dip_10"
        android:contentDescription="@null"
        android:src="@mipmap/icon_select_arrow" />
</RelativeLayout>
